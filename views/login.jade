extends layout

block content
  .container
    .row#login_container
      .span4.offset4.well
        legend Please Sign In
        //- TODO: flash?
        //- .alert.alert-error
        //-   a.close(data-dismiss='alert', href='#') Ã—
        //-   | Incorrect Username or Password!
        form(method='POST', action='/login', accept-charset='UTF-8')
          input#username.span4(type='text', name='username', placeholder='Username')
          input#password.span4(type='password', name='password', placeholder='Password')
          label.checkbox
            input(type='checkbox', name='remember', value='1')
            | Remember Me
          button.btn.btn-info.btn-block(type='submit', name='submit') Sign in
